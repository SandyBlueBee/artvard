<div class="filler"></div>
<div class="container">
  <div class="col p-5 m-5">
    <div class="row p-5">
      <div class="border border-2 rounded-3 p-5 ">
        <h2>S'enregistrer</h2>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :email,
                        label: "Email",
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email" }%>
            <%= f.input :password,
                        label: "Mot de passe",
                        required: true,
                        hint: ("#{@minimum_password_length} caractÃ¨res minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password" } %>
            <%= f.input :password_confirmation,
                        label: "Confirmer",
                        required: true,
                        input_html: { autocomplete: "new-password" } %>
          </div>

          <div class="form-actions btn btn-light border">
            <%= f.button :submit, "S'enregistrer" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
<div class="filler"></div>
