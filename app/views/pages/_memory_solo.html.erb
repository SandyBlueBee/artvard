<div class="game_container">
  <div class='scoreTable box-shadow'>
    <div>
    <a class="button game-button" data-action="click->solo#start">Start</a>
    <%= link_to "Restart", game_path, class: "button game-button" %>
    </div>
  </div>
  <p data-solo-target="timer"></p>
  <div class='flip-card-grid'>
    <% cards.each do |card| %>
      <div class="card disabled upsidedown" data-action="click->solo#flip" data-solo-target="card" data-id="<%= card[:id] %>">
        <% if card.keys.include?(:image) %>
            <%= image_tag image_url(card[:image]), class: "image-memory" %>
        <% else %>
            <p><%= card[:title] %></p>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
