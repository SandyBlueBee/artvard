<div class="container"data-controller="memory">
  <button data-action="click->memory#start">start</button>
  <button data-action="click->memory#restart">restart</button>
  <div  class='flip-card-grid'>
    <% cards.shuffle.each_with_index do |card, index| %>
      <div class="card disabled" data-action="click->memory#flip" data-memory-target="card" data-id="<%= card.id %>" data-index="<%=index%>">
        <%= card.title %>
      </div>
    <% end %>
  </div>
</div>
